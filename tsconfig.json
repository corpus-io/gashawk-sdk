{
    "compilerOptions": {
        "declaration": true,
        "strictNullChecks": true,
        "target": "es2018",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": ["es2015", "dom"],
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
